<table class="pdf-items-tbl">
	<thead> 
		<tr>
			<?php foreach($this->getFields() as $fieldId => $fieldData):?>
			     <?php $block->getChildHtml($fieldId);?>
				<th><?php  echo $block->getChildBlock($fieldId)->getFieldHtml('header_label');?></th>
