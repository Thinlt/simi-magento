<table class="pdf-totals-tbl">
	<tbody>
		{{foreach invoice.totals.body as total}}
		<tr>
			<td class="pdf-totals-label">{{var total.label}}</td>
			<td class="pdf-totals-value">{{var total.value}}</td>
		</tr>
		{{/foreach}}
	</tbody>
	<tfoot>
		{{foreach invoice.totals.footer as total}}
		<tr>
			<td class="pdf-totals-label">{{var total.label}}</td>
			<td class="pdf-totals-value">{{var total.value}}</td>
		</tr>
		{{/foreach}}
	</tfoot>
</table>