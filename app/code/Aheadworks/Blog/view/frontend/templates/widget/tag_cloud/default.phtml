<?php
    $tagCloudItems = $block->getItems();
    $title = $block->getTitle() ? : 'Tags';
?>
<?php if ($block->isEnabled() && count($tagCloudItems)): ?>
    <div class="block widget block-blog-tag-cloud">
        <div class="block-title">
            <strong><?php echo __($block->escapeHtml($title)) ?></strong>
        </div>
        <div class="block-content">
            <div class="blog-tags blog-tags-<?php if ($block->isCloudMode()): ?>cloud<?php else: ?>plain<?php endif; ?>">
                <?php foreach ($tagCloudItems as $tagCloudItem): ?>
                    <a href="<?php /* @noEscape */ echo $block->getSearchByTagUrl($tagCloudItem) ?>"
                       <?php if ($block->isCloudMode()): ?>style="font-size: <?php /* @noEscape */ echo $block->getWeight($tagCloudItem) ?>%;"<?php endif; ?>
                       class="blog-tags-tag">
                        <?php echo $block->escapeHtml($tagCloudItem->getTag()->getName()) ?>
                    </a>
                <?php endforeach; ?>
            </div>
        </div>
    </div>
<?php endif; ?>
