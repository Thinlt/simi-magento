<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="vendor-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Vnecoms_VendorsConfig::css/styles.css"/>
    </head>
    <body>
        <referenceContainer name="js">
            <block class="Magento\Backend\Block\Template" template="Vnecoms_VendorsConfig::system/config/js.phtml"/>
        </referenceContainer>
        <referenceContainer name="page.main.actions">
            <block class="Vnecoms\VendorsConfig\Block\Store\Switcher" name="adminhtml.system.config.switcher" template="Vnecoms_VendorsConfig::store/switcher.phtml">
                <arguments>
                    <argument name="switch_websites" xsi:type="string">0</argument>
                    <argument name="switch_store_groups" xsi:type="string">0</argument>
                    <argument name="switch_store_views" xsi:type="string">1</argument>
                    <argument name="default_selection_name" xsi:type="string" translate="true">Default Config</argument>
                    <argument name="show_manage_stores_link" xsi:type="string">0</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Vnecoms\VendorsConfig\Block\System\Config\Tabs" name="adminhtml.system.config.tabs" before="-"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block name="system.config.edit" class="Vnecoms\VendorsConfig\Block\System\Config\Edit"/>
        </referenceContainer>
    </body>
</page>
