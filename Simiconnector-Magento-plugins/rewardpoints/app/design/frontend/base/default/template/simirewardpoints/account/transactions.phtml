<div class="page-title">
    <h1><?php echo $this->__('Point Transactions') ?></h1>
</div>

<?php $_collection = $this->getCollection() ?>
<?php echo $this->getPagerHtml() ?>
<table class="data-table" id="recent-transactions-history">
    <colgroup>
        <col class="id" />
        <col class="title" />
        <col class="point_amount" />
        <col class="created_time" />
        <col class="expiration_date" />
        <col class="status" />
    </colgroup>
    <thead>
        <tr>
            <!-- By Crystal -->
            <th>#</th>
            <th><?php echo $this->__('Action') ?></th>
            <th><?php echo $this->__('Point Balance Change') ?></th>
            <th><?php echo $this->__('Creating Date') ?></th>
            <th><?php echo $this->__('Expiration Date') ?></th>
            <th><?php echo $this->__('Status') ?></th>
        </tr>
    </thead>
    <tbody>
    <?php if (count($_collection)): ?>
        <?php foreach ($_collection as $_transaction): ?>
        <tr>
            <td class="a-right first"><?php echo $_transaction->getId() ?></td>
            <td><span class="label-cell"><?php echo $this->__('Action') ?></span><h2><?php echo $this->__($_transaction->getTitleHtml()) ?></h2></td>
            <td class="a-right"><span class="label-cell"><?php echo $this->__('Point Balance Change') ?></span><h2><?php echo $_transaction->getPointAmount() ?></h2></td>
            <td><span class="label-cell"><?php echo $this->__('Created at') ?></span><h2><?php echo $this->formatTime($_transaction->getCreatedTime(), 'medium', true) ?></h2></td>
            <td class="a-right"><span class="label-cell"><?php echo $this->__('Expired at')?></span>
                <h2><?php if ($_transaction->getExpirationDate()): ?>
                    <?php echo $this->formatTime($_transaction->getExpirationDate(), 'medium', true) ?>
                <?php else: ?>
                    <?php echo $this->__('N/A') ?>
                <?php endif ?>
                </h2></td>
                <td><span class="label-cell"><?php echo $this->__('Status') ?></span><h2><?php echo $_transaction->getStatusLabel() ?></h2></td>
        </tr>
        <!-- End -->
        <?php endforeach ?>
    <?php else: ?>
        <tr>
            <td colspan="6">
                <div>
                    <?php echo $this->__('No transaction found!') ?>
                </div>
            </td>
        </tr>
    <?php endif ?>
    </tbody>
</table>
<?php echo $this->getPagerHtml() ?>
